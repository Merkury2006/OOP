<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonType?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<DialogPane prefHeight="474.0" prefWidth="473.0" style="-fx-background-color: #f8f9fa;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.oop.Controllers.AlarmAddDialogController">

    <content>
        <VBox prefHeight="410.0" prefWidth="488.0" spacing="20" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
            <Label alignment="CENTER" prefHeight="25.0" prefWidth="642.0" style="-fx-text-fill: #2c3e50; -fx-font-size: 16px; -fx-font-weight: bold;" text="🕐 Выберите время будильника" textAlignment="CENTER" />

            <VBox prefHeight="184.0" prefWidth="347.0" spacing="15" style="-fx-background-color: #f8f9fa; -fx-padding: 15; -fx-background-radius: 8;">
                <Label style="-fx-text-fill: #5a6c7d; -fx-font-size: 14px;" text="Настройте время:" />

                <HBox alignment="CENTER" spacing="15">
                    <VBox alignment="CENTER" spacing="5">
                        <Label style="-fx-text-fill: #5a6c7d; -fx-font-size: 12px;" text="Часы" />
                        <Spinner fx:id="hourSpinner" prefHeight="35" prefWidth="90" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                    </VBox>

                    <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 15 0 0 0;" text=":" />

                    <VBox alignment="CENTER" spacing="5">
                        <Label style="-fx-text-fill: #5a6c7d; -fx-font-size: 12px;" text="Минуты" />
                        <Spinner fx:id="minuteSpinner" prefHeight="35" prefWidth="90" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                    </VBox>
                </HBox>

                <HBox alignment="CENTER" spacing="10.0">
                    <Button onAction="#setCurrentTime" style="-fx-background-color: #e3f2fd; -fx-text-fill: #1976d2; -fx-font-size: 12px;" text="Текущее время" />
                    <Button onAction="#setMorningTime" style="-fx-background-color: #fff3e0; -fx-text-fill: #f57c00; -fx-font-size: 12px;" text="Утро (07:00)" />
                    <Button onAction="#setEveningTime" style="-fx-background-color: #fce4ec; -fx-text-fill: #c2185b; -fx-font-size: 12px;" text="Вечер (22:00)" />
                </HBox>
            </VBox>
         <VBox prefHeight="49.0" prefWidth="351.0">
               <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <Label alignment="CENTER" prefHeight="25.0" prefWidth="128.0" style="-fx-text-fill: #5a6c7d; -fx-font-size: 12px;" text="Выберите мелодию:" />
               <ComboBox fx:id="melodyComboBox" prefHeight="25.0" prefWidth="175.0" />
               </HBox>
         </VBox>
         <Label fx:id="selectedTimeLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="47.0" prefWidth="625.0" textAlignment="CENTER">
            <font>
               <Font name="System Bold" size="32.0" />
            </font>
         </Label>
        </VBox>
    </content>

    <buttonTypes>
        <ButtonType buttonData="OK_DONE" text="✅ Установить будильник" />
        <ButtonType buttonData="CANCEL_CLOSE" text="❌ Отмена" />
    </buttonTypes>
</DialogPane>
