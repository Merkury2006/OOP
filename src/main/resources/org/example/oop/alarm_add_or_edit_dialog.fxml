<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonType?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<DialogPane fx:id="dialogPane" prefHeight="683.0" prefWidth="767.0" style="-fx-background-color: #f8f9fa;" xmlns="http://javafx.com/javafx/21.0.8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.oop.Controllers.AlarmAddOrEditDialogController">

    <content>
        <VBox prefHeight="600.0" prefWidth="635.0" spacing="20" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
            <Label alignment="CENTER" prefHeight="25.0" prefWidth="642.0" style="-fx-text-fill: #2c3e50; -fx-font-size: 16px; -fx-font-weight: bold;" text="🕐 Выберите время будильника" textAlignment="CENTER" />

            <VBox prefHeight="184.0" prefWidth="347.0" spacing="15" style="-fx-background-color: #f8f9fa; -fx-padding: 15; -fx-background-radius: 8;">
                <Label style="-fx-text-fill: #5a6c7d; -fx-font-size: 14px;" text="Настройте время:" />

                <HBox alignment="CENTER" spacing="15">
                    <VBox alignment="CENTER" spacing="5">
                        <Label style="-fx-text-fill: #5a6c7d; -fx-font-size: 12px;" text="Часы" />
                        <Spinner fx:id="hourSpinner" prefHeight="35" prefWidth="90" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                    </VBox>

                    <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 15 0 0 0;" text=":" />

                    <VBox alignment="CENTER" spacing="5">
                        <Label style="-fx-text-fill: #5a6c7d; -fx-font-size: 12px;" text="Минуты" />
                        <Spinner fx:id="minuteSpinner" prefHeight="35" prefWidth="90" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                    </VBox>
                </HBox>

                <HBox alignment="CENTER" spacing="10.0">
                    <Button onAction="#setCurrentTime" style="-fx-background-color: #e3f2fd; -fx-text-fill: #1976d2; -fx-font-size: 12px;" text="Текущее время" />
                    <Button onAction="#setMorningTime" style="-fx-background-color: #fff3e0; -fx-text-fill: #f57c00; -fx-font-size: 12px;" text="Утро (07:00)" />
                    <Button onAction="#setEveningTime" style="-fx-background-color: #fce4ec; -fx-text-fill: #c2185b; -fx-font-size: 12px;" text="Вечер (22:00)" />
                </HBox>
            </VBox>
         <VBox prefHeight="49.0" prefWidth="351.0">
            <HBox alignment="CENTER" prefHeight="25.0" prefWidth="446.0">
                  <Label prefHeight="25.0" prefWidth="126.0" style="-fx-text-fill: #5a6c7d; -fx-font-size: 12px;" text="Выберите название:" />
                  <TextField fx:id="titleAlarm" prefHeight="25.0" prefWidth="237.0" text="Будильник" />
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </HBox>
               <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <Label prefHeight="25.0" prefWidth="127.0" style="-fx-text-fill: #5a6c7d; -fx-font-size: 12px;" text="Выберите мелодию:" />
               <ComboBox fx:id="melodyComboBox" prefHeight="25.0" prefWidth="248.0" />
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
               </HBox>
            <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                  <Label fx:id="repeatLabel" alignment="CENTER" onMouseClicked="#boxDaysVisibility" prefHeight="17.0" prefWidth="434.0" style="-fx-font-size: 12px; -fx-text-fill: #5a6c7d; -fx-cursor: hand;" text="Повторять в ▼" />
                  <VBox fx:id="daysContainer" alignment="CENTER" prefHeight="119.0" prefWidth="186.0" spacing="5.0" visible="false">
                        <CheckBox fx:id="mondayCheckBox" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="17.0" prefWidth="112.0" style="-fx-text-fill: #5a6c7d; -fx-font-size: 12px;" text="Понедельник" />
                        <CheckBox fx:id="tuesdayCheckBox" mnemonicParsing="false" prefHeight="17.0" prefWidth="112.0" style="-fx-text-fill: #5a6c7d; -fx-font-size: 12px;" text="Вторник" />
                        <CheckBox fx:id="wednesdayCheckBox" mnemonicParsing="false" prefHeight="17.0" prefWidth="112.0" style="-fx-text-fill: #5a6c7d; -fx-font-size: 12px;" text="Среда" />
                        <CheckBox fx:id="thursdayCheckBox" mnemonicParsing="false" prefHeight="17.0" prefWidth="112.0" style="-fx-text-fill: #5a6c7d; -fx-font-size: 12px;" text="Четверг" />
                        <CheckBox fx:id="fridayCheckBox" mnemonicParsing="false" prefHeight="17.0" prefWidth="112.0" style="-fx-text-fill: #5a6c7d; -fx-font-size: 12px;" text="Пятница" />
                        <CheckBox fx:id="saturdayCheckBox" mnemonicParsing="false" prefHeight="17.0" prefWidth="112.0" style="-fx-text-fill: #5a6c7d; -fx-font-size: 12px;" text="Суббота" />
                        <CheckBox fx:id="sundayCheckBox" mnemonicParsing="false" prefHeight="17.0" prefWidth="112.0" style="-fx-text-fill: #5a6c7d; -fx-font-size: 12px;" text="Воскресенье" />
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                        <Button onAction="#selectWorkDays" style="-fx-background-color: #e3f2fd; -fx-text-fill: #1976d2; -fx-font-size: 12px;" text="Рабочие дни" />
                        <Button onAction="#selectWeekend" style="-fx-background-color: #2a9c3535; -fx-text-fill: #2a9c35; -fx-font-size: 12px;" text="Выходные" />
                        <Button onAction="#selectAllDays" style="-fx-background-color: #fff3e0; -fx-text-fill: #f57c00; -fx-font-size: 12px;" text="Все дни" />
                        <Button onAction="#clearSelection" style="-fx-background-color: #fce4ec; -fx-text-fill: #c2185b; -fx-font-size: 12px;" text="Очистить" />
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </HBox>
                  </VBox>
            </VBox>
            <VBox.margin>
               <Insets />
            </VBox.margin>
         </VBox>
         <Region prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
         <Label fx:id="selectedTimeLabel" alignment="BOTTOM_CENTER" contentDisplay="CENTER" prefHeight="47.0" prefWidth="813.0" textAlignment="CENTER" VBox.vgrow="ALWAYS">
            <font>
               <Font name="System Bold" size="32.0" />
            </font>
         </Label>
        </VBox>
    </content>

    <buttonTypes>
        <ButtonType buttonData="OK_DONE" text="✅ Установить будильник" />
        <ButtonType buttonData="CANCEL_CLOSE" text="❌ Отмена" />
    </buttonTypes>
</DialogPane>
