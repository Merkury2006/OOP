<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="719.0" prefWidth="924.0" spacing="20" style="-fx-padding: 20; -fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.oop.Controllers.MainController">
    <HBox alignment="CENTER_LEFT" prefHeight="38.0" prefWidth="650.0" style="-fx-padding: 0 0 10 0;">
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="🕐 Мои будильники" />
        <Pane HBox.hgrow="ALWAYS" />
        <Button fx:id="addAlarmButton" onAction="#addAlarm" style="-fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-pref-width: 200;" text="➕ Добавить будильник" />
    </HBox>

    <Label fx:id="labelNoAlarms" alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" prefHeight="41.0" prefWidth="764.0" style="-fx-text-fill: #7f8c8d; -fx-font-style: italic;" text="Будильников пока нет" textAlignment="CENTER">
        <font>
            <Font size="22.0" />
        </font>
    </Label>

    <ScrollPane fitToWidth="true" prefHeight="489.0" prefWidth="626.0" style="-fx-background: white; -fx-border-color: white;" VBox.vgrow="ALWAYS">
        <content>
            <VBox fx:id="alarmsContainer" prefWidth="609.0" spacing="10" style="-fx-background-color: white; -fx-padding: 15;" />
        </content>
    </ScrollPane>

</VBox>
