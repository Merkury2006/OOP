<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #f8f9fa; -fx-padding: 12; -fx-background-radius: 8; -fx-border-color: #e9ecef; -fx-border-radius: 8;" xmlns="http://javafx.com/javafx/21.0.8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.oop.Controllers.AlarmItemController">

    <Label fx:id="timeLabel" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-pref-width: 80;" />
    <Label fx:id="statusLabel" alignment="CENTER" prefHeight="3.0" style="-fx-pref-width: 100; -fx-pref-height: 20; -fx-background-radius: 5; -fx-background-color: #2a9c35;">
      <font>
         <Font size="16.0" />
      </font></Label>
    <Label fx:id="nameAlarmLabel" alignment="CENTER" maxWidth="300.0" textAlignment="LEFT" wrapText="true">
      <font>
         <Font size="16.0" />
      </font></Label>
   <Region HBox.hgrow="ALWAYS" />

    <ToggleButton fx:id="activeToggle" contentDisplay="RIGHT" style="-fx-font-size: 12px; -fx-pref-width: 60;" text="Вкл" />
   <Button fx:id="editButton" mnemonicParsing="false" onAction="#handleEdit" text="✏ Редактировать" />
    <Button alignment="CENTER" contentDisplay="RIGHT" onAction="#handleDelete" prefHeight="25.0" prefWidth="76.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 12px;" text="Удалить" />

</HBox>
